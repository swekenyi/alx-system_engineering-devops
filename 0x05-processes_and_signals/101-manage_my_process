#!/bin/bash

# Check for root privileges
if [ "$(id -u)" != "0" ]; then
    echo "Please run this script with sudo or as root."
    exit 1
fi

# Check for valid arguments
case "$1" in
    start|stop|restart)
        ./manage_my_process $1
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

exit 0

